# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                           controllers.Application.index()
GET         /create                                     controllers.Application.renderNewEntryForm()
POST        /create-urlencoded                          controllers.Application.create()

GET         /hash/:hash                                 controllers.api.Rest.findByHash(hash)
GET         /search                                     controllers.api.Rest.search()
GET         /:key/:value                                controllers.api.Rest.findByKey(key, value)
POST        /create                                     controllers.api.Rest.create()
GET         /load                                       controllers.api.Rest.load()

GET         /docs                                       controllers.Application.docs()

GET         /docs/api/:api                                       controllers.Application.docsApi(api)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)



